<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gladiance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>



    </style>



    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>

    </style>


    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/otp_edittext_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.Gladiance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gladiance.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gladiance.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- LIGHT THEME CODE-->

    <!--    Screen Background theme color-->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button and card view and all small small background Theme -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_main_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Grid Backgraund Theme -->
    <style name="MyGridStyle">
        <item name="android:background">@drawable/background_main_dark</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!-- EditText Theme -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_edittext_bg_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Top Button Theme -->
    <style name="TopButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/top_button_background_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Top Switch Theme -->
    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_light</item>
        <item name="android:track">@drawable/switch_background_light</item>
    </style>

    <!-- Top Feedback Ring Theme -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <!--  MeowBottomNavigation Theme -->
    <style name="MeowBottomNavigation">
        <item name="mbn_backgroundBottomColor">#ffffff</item>
        <item name="mbn_circleColor">#000000</item>
        <item name="mbn_countBackgroundColor">#ff6f00</item>
        <item name="mbn_countTextColor">#ffffff</item>
        <item name="mbn_defaultIconColor">#000000</item>
        <item name="mbn_rippleColor">#000000</item>
        <item name="mbn_selectedIconColor">#ffffff</item>
        <item name="mbn_shadowColor">#000000</item>

    </style>

    <!--  Dropdown Theme -->
    <style name="MyDropdownStyle">
        <item name="android:background">@drawable/dropdown_backgraund</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <!--  Switch Theme -->

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>