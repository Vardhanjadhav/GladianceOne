        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text="User Email ID"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingStart="@dimen/_10sdp"
            android:text="Sushant12@gmail.com"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:weightSum="2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEmailId"
        app:layout_constraintVertical_bias="0.370" >

        <Button
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/new_border_button_bg"
            android:text="Reject"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:textSize="@dimen/_17sdp"/>

        <Button
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_38sdp"
            android:background="@drawable/new_button_bg"
            android:text="Accept Invite"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>

