<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Navigation.RoomControl.MoodsFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Moods"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="414dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/GoodMornig"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_main"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewGoodMornig"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/wether" />

                        <TextView
                            android:id="@+id/textviewGoodMornig"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:text="Good Morning"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="#80000000"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/welcome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_main"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewWelcome"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/welcome" />

                        <TextView
                            android:id="@+id/textviewroomService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:text="Welcome"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#80000000"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/Laundry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_main"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageVacation"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/vacation" />

                        <TextView
                            android:id="@+id/textviewLaundry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:text="Vacation"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="#80000000"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/Sunny"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_main"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewSunny"
                            android:layout_width="120dp"
                            android:layout_height="90dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:src="@drawable/sunny" />

                        <TextView
                            android:id="@+id/textviewSunny"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:padding="5dp"
                            android:text="Sunny"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>