<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gladiance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <!--    DARK THEME CODE-->

    <!--    Screen Background theme color-->
    <style name="SCREEN">
        <item name="android:background">#000000</item>
    </style>

    <!-- Text background if light mode on -->
    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button and card view and all small small background Theme -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_main_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Grid Backgraund Theme -->
    <style name="MyGridStyle">
        <item name="android:background">@drawable/background_main_light</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- EditText Theme -->
    <style name="MyEditTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_edittext_bg_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Top Button Theme -->
    <style name="TopButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/top_button_background_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb_dark</item>
        <item name="android:track">@drawable/switch_background_dark</item>
    </style>

    <!-- Top Feedback Ring Theme -->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>


    <!-- MeowBottomNavigation night Theme -->
    <style name="MeowBottomNavigation">
        <item name="mbn_backgroundBottomColor">#000000</item>
        <item name="mbn_circleColor">#ffffff</item>
        <item name="mbn_countBackgroundColor">#ff6f00</item>
        <item name="mbn_countTextColor">#000000</item>
        <item name="mbn_defaultIconColor">#ffffff</item>
        <item name="mbn_rippleColor">#ffffff</item>
        <item name="mbn_selectedIconColor">#000000</item>
        <item name="mbn_shadowColor">#ffffff</item>

    </style>
</resources>